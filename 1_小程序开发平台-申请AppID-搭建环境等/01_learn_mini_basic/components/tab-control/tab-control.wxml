<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="*this">
    <view 
      class="item {{index === currentIndex ? 'active' : ''}}" 
      bindtap="onItemTap"
      data-index="{{index}}"
    >
      <view class="title">{{item}}</view>
    </view>
  </block>
</view>
