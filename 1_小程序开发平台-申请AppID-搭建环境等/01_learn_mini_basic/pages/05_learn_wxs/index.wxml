<!-- 2.方式二.独立的文件，通过src引入wxs文件 -->
<wxs module="format" src="/utils/format.wxs"></wxs>

<view class="books">
  <block wx:for="{{books}}" wx:key="id">
    <view>{{item.name}}-{{format.formatPrice(item.price)}}</view>
  </block>
</view>

<view class="total">总价格:{{format.calcPrice(books)}}</view>

