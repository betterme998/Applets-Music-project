<!--pages/01_初体验/index.wxml-->
<view class="banner">
  <swiper circular autoplay indicator-dots>
    <block wx:for="{{banner}}" wx:key="acm">
      <swiper-item>
        <image src="{{item.image}}"></image>
      </swiper-item>
    </block>
  </swiper>
</view>

<view>
  <view>当前计算：{{counter}}</view>
</view>

<view class="button">
  <button bindtap="onBtn1Click">按钮1</button>

  <block wx:for="{{btns}}" wx:key="*this">
    <button 
      class="btn" 
      style="background: {{item}};"
      bindtap="onBtnClick"
      data-color="{{item}}"
    >
      {{item}}
    </button>
  </block>
</view>

<view class="list">
  <block wx:for="{{30}}" wx:key="*this">
    <view>列表数据:{{item}}</view>
  </block>
</view>
