/* components/nav-bar/nav-bar.wxss */
/* 自定义导航 */
.nav {
    display: flex;
    height: 44px;
    color: #fff;
}

.left, .right, .center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav .left, .nav .right {
    width: 120rpx;
}
.nav .center{
    flex: 1;
}

/* 控制内容显示 */
.left .icon {
    font-size: 20px;
}

.default {
    display: none;
}

.left .default {
    display: flex;
}

/* 当.slot 内容为空时，设置display为blick */
.slot:empty + .default {
    display: flex;
}