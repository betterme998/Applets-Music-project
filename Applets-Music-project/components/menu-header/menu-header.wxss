/* components/menu-header/menu-header.wxss */
@import "/assets/font/iconfont.wxss";
.content {
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
    height: 450rpx;
    color: #fff;
    overflow-x:hidden;
}
.bg-canvas{
    position: absolute;
    z-index: -10;
    top: -800px;
    left: 0;
    width: 100%;
    height: 100%;
}

.album {
    display: flex;
    margin-top: 40rpx;
    padding: 0 40rpx;
}
.album .image {
    width: 220rpx;
    height: 220rpx;
    border-radius: 16rpx;
}
.album .info {
    position: relative;
    height: 220rpx;
    flex:1;
    margin-left: 50rpx;
}
.album .anthor {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}
.album .anthor .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.album .anthor .nickname{
    font-size: 24rpx;
    margin-left: 18rpx;
}

.desc {
    font-size: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    margin-top: 40rpx;
    padding: 0 40rpx;
    text-overflow: ellipsis;
}
.operation {
    display: flex;
    justify-content: space-around;
    padding: 30rpx;
}

.operation .item {
    display: flex;
    align-items: center;
}

.operation .item .iconfont {
    font-size: 50rpx;
    margin-right: 10rpx;
}
.operation .item .icon-xihuan {
    font-size: 55rpx;
    margin-right: 10rpx;
}
.operation .item .text {
    font-size: 28rpx;
}