<!--components/search-result-item/search-result-item.wxml-->
<view class="itemCon">
    <view class="itemTop">
        <view class="slot">
            <slot name="top"></slot>
        </view>
        <view class="default">
            <text class="title">{{title}}</text>
            <view class="rightIcon">
                <text class="iconfont icon-24gf-play"></text>
                <text class="text">播放全部</text>
            </view>
        </view>
    </view>
    <view class="itemmIddle">
        <view class="slot">
            <slot name="Iddle"></slot>
        </view>
        <view class="default defaultIddle">
            <block wx:for="{{singleList}}" wx:key="id">
                <single-Item
                    singleValue="{{item}}"
                    class="single-Item"
                    keyWorld="{{keyWorld}}"
                />
            </block>
        </view>
    </view>
    <view class="itemBottom">
        <view class="slot">
            <slot name="Bottom"></slot>
        </view>
        <view class="default BottomCon">
            <text>查看全部{{title}}</text>
        </view>
    </view>
</view>
