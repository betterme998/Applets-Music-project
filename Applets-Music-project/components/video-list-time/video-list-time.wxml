<!--components/video-list-time/video-list-time.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="item">
    <view class="album">
        <image class="image" mode="widthFix" src="{{itemInfo.coverUrl}}"></image>
        <view class="info">
            <text class="count">{{format.formatTime(itemInfo.durationms)}}</text>
        </view>
    </view>
    <view class="content">
        <view class="title">{{ itemInfo.title }}</view>
        <view class="nickname">
            <text class="count">{{ itemInfo.creator[0].userName }}</text>
            <text class="count">{{format.formatCount(itemInfo.playTime)}}播放</text>
        </view>
    </view>
</view>
