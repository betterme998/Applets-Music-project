/* components/video-list-time/video-list-time.wxss */
.item {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}
.album {
    width: 230rpx;
    height: 100%;
    position: relative;
    display: flex;
}
.image {
    width: 100%;
    border-radius: 10rpx;
}
.info {
    display: flex;
    position: absolute;
    bottom: 6rpx;
    right: 10rpx;
    color: #fff;
    font-size: 24rpx;
}

.info .count {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.content{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    flex: 1;
    padding: 0 20rpx;
}
.content .title {
    font-size: 28rpx;
    /* 两行隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.content .nickname {
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    color: #555;
}
