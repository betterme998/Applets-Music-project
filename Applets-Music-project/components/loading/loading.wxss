/* components/loading/loading.wxss */
.loadingCon{
    margin-top: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #333438;
}
.loading{
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-right: 15rpx;
}
.loading .item {
    width: 13%;
    height: 100%;
    background-color: #fd3b35;
}
@keyframes itemHeight {
    0% {
        height: 0%;
    }
    50% {
        height: 100%;
    }
    100% {
        height: 0%;
    }
}
.item1 {
    animation: itemHeight .8s linear infinite;
}
.item2 {
    animation: itemHeight 1s linear infinite;
}
.item3 {
    animation: itemHeight .9s linear infinite;
}
.item4 {
    animation: itemHeight 1.1s linear infinite reverse;
}