/* components/loading/loading.wxss */
.loadingCon{
    margin-top: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #333438;
}
.loading{
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-right: 15rpx;
}
.loading .item {
    width: 13%;
    background-color: #fd3b35;
}
.loading .item1 {
    height: 100%;
}
.loading .item2 {
    height: 50%;
}
.loading .item3 {
    height: 80%;
}
.loading .item4 {
    height: 70%;
}
@keyframes itemHeight1 {
    0% {
        height: 100%;
    }
    50% {
        height: 30%;
    }
    100% {
        height: 100%;
    }
}
@keyframes itemHeight2 {
    0% {
        height: 30%;
    }
    50% {
        height: 50%;
    }
    100% {
        height: 30%;
    }
}
@keyframes itemHeight3 {
    0% {
        height: 80%;
    }
    50% {
        height: 30%;
    }
    100% {
        height: 80%;
    }
}
@keyframes itemHeight4 {
    0% {
        height: 30%;
    }
    50% {
        height: 70%;
    }
    100% {
        height: 30%;
    }
}
.item1 {
    animation: itemHeight1 .8s linear infinite;
} 
 .item2 {
    animation: itemHeight2 .8s linear infinite;
}
.item3 {
    animation: itemHeight3 .8s linear infinite;
}
.item4 {
    animation: itemHeight4 .8s linear infinite reverse;
}