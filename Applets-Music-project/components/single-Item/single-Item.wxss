    flex: 1;
    display: flex;
    flex-wrap: nowrap;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
} */

.bottomLeft{
    color: #557da2;
}
.right{
    display: flex;
    align-items: center;
}
.iconfont{
    font-size: 20rpx;
    color: #b3b3b3;
}
.textright{
    padding: 6rpx 10rpx;
    border: 2rpx solid #b3b3b3;
    border-radius: 14rpx;
    margin-right: 36rpx;
}
.icon-diandiandianshu{
    font-size: 50rpx;
    margin-top: 2rpx;
}
.bottom{
    color: #9b9b9b;
    font-size: 25rpx;
}
.clickSpe{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
}
.capsule{
    display: inline-flex;
    justify-content: center;
    flex-wrap: nowrap;
    align-items: center;
    font-size: 14rpx;
    width: 46rpx;
    height: 26rpx;
    padding: 0rpx 5rpx;
    border-radius: 10rpx;
    margin-right: 10rpx;
    box-sizing: border-box;
}
.vip{
    color: #d59368;
    border: 1rpx solid #d59368;
}
.audition{
    color: #ce6967;
    border: 1rpx solid #ce6967;
}
.Original{
    color: #fff;
    background-color: #ff605f;
}
.SQ{
    color: #c7716b;
    border: 1rpx solid #c7716b;
}