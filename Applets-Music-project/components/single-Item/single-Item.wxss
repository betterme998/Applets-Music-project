/* components/single-Item/single-Item.wxss */
@import "/assets/font/iconfont.wxss";
.item{
    display: flex;
    flex-direction: column;
    padding: 18rpx 0;
    box-sizing: border-box;
    position: relative;
}
.underline{
    border-top: 2rpx solid #f6f6f6;
}
.top{
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
}
.left{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.leftText{
    font-size: 30rpx;
    margin-bottom: 4rpx;
}
.leftText .textLeft{
    color: #393939;
}
.textLeft.active{
    color: #507bab;
}
.leftText .textRight{
    color: #a5a5a5;
}
.leftBottom{
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    font-size: 25rpx;
    color: #9b9b9b;
    box-sizing: border-box;
    padding: 2rpx;
    overflow: hidden;
}
.leftBottom .text{
    flex-shrink:0;
}
