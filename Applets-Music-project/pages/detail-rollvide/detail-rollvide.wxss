/* pages/detail-rollvide/detail-rollvide.wxss */
.navCon{
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
}
.swiper{
    width: 100%;
    height: 100vh;
}
.imageCon{
    width: 100%;
    height: 100%;
    position: relative;
    background-color: #000000;
}
.image{
    width: 100%;
    position: absolute;
}
.video{
    width: 100%;
}

/* mv信息 */
.MvleftInfo{
    position: absolute;
    margin-left: 20rpx;
    bottom: 200rpx;
    width: 80%;
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
}
.mvLeftTop{
    display: flex;
    color: #fff;
    align-items: center;
    margin-bottom: 28rpx;
}
.artistName{
    margin: 0 20rpx;
}
.imageItemCon{
    border-radius: 50%;
    background-color: #fff;
    padding: 2rpx;
    overflow: hidden;
    width: 70rpx;
    height: 70rpx;
}
.mvimage{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.icon-jiahao1{
    font-size: 25rpx;
    margin-top: 4rpx;
    border-radius: 20rpx;
    padding: 6rpx 10rpx;
    background-color: #fe3a3b;
}
.mvLeftBottom{
    display: flex;
    flex-direction: column;
    color: #fff;
}
.mvName{
    display: flex;
    align-items: center;
}
.icon-zhankai{
    margin-left: 16rpx;
}
.mvIcon{
    padding: 2rpx 10rpx;
    background-color: #333333;
    border-radius: 4rpx;
    margin-right: 10rpx;
    font-size: 25rpx;
}

/* 进度条 */
.sliderCon{
    position: absolute;
    left: 0;right: 0;bottom: 80rpx;
}
.videoTime{
    color: #333333;
    font-size: 38rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 100rpx;
}
.videoTime .active{
    font-size: 30rpx;
    padding: 0 10rpx;
}
.itemTime{
    color: #f9f9f9;
}
.slider{
    margin:10px 0
}
.releaseTime{
    color: #999999;
    font-size: 20rpx;
    margin-top: 20rpx;
}







