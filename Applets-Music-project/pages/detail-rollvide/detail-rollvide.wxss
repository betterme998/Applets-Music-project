/* pages/detail-rollvide/detail-rollvide.wxss */
.navCon{
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
}
.swiper{
    width: 100%;
    height: 100vh;
}
.swiperItemComs{
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    background-color: #000000;
}
.imageCon{
    display: flex;
    /* align-items: center; */
    width: 100%;
    flex: 1;
    position: relative;
}
.imageVideoCom{
    position: relative;
    display: flex;
    align-items: center;
    align-self: center;
    width: 100%;
    height: 100px;
}
.image{
    width: 100%;
    position: absolute;
}
.video{
    width: 100%;
}

/* mv信息 */
.MvleftInfoCom{
    position: absolute;
    bottom: 0;
    margin-left: 30rpx;
    width: 75%;
    margin-bottom: 30rpx;
}
.MvleftInfo{
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}
.mvLeftTop{
    display: flex;
    color: #fff;
    align-items: center;
    margin-bottom: 20rpx;
}
.artistName{
    margin: 0 20rpx;
    font-weight: 700;
}
.imageItemCon{
    border-radius: 50%;
    background-color: #fff;
    padding: 2rpx;
    overflow: hidden;
    width: 70rpx;
    height: 70rpx;
}
.mvimage{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.icon-jiahao1{
    font-size: 25rpx;
    margin-top: 4rpx;
    border-radius: 20rpx;
    padding: 6rpx 10rpx;
    background-color: #fe3a3b;
}
.mvLeftBottom{
    display: flex;
    flex-direction: column;
    color: #fff;
}
.mvName{
    /* display: flex;
    align-items: center; */
}
.scrollViewCon ::-webkit-scrollbar{
    display: none;
}
.masking{
    position: absolute;
    background-color: red;
    opacity: .5;
    width: 100%;
    height: 100%;
}
.active{
    opacity: 0;
}
.icon-zhankai{
    margin-left: 16rpx;
    padding: 10rpx 0;
}
.mvIcon{
    padding: 2rpx 10rpx;
    background-color: #333333;
    border-radius: 4rpx;
    margin-right: 10rpx;
    font-size: 25rpx;
}

/* 滚动 */
.nameRoll{
    display: flex;
    flex-wrap: nowrap;
    width: 340rpx;
    align-items: center;
    color: #fff;
    font-size: 32rpx;
}
/* .rollCon{
    display: flex;
    position: absolute;
    align-items: center;
    flex-wrap: nowrap;
    width: 280rpx;
} */
.rollItem{
    width: 20rpx;
    flex-shrink:0;
    flex-grow:0;
    z-index: 5;
}
.rollText{
    display: flex;
    position: relative;
    align-items: center;
    margin: 0 10rpx;
    padding: 0 20rpx;
    white-space:nowrap;
    overflow: hidden;
    flex: 1;
}
.rollstart{
    position: absolute;
    left: 0;
    bottom: 0;
    background-image: linear-gradient(to right,rgba(0,0,0,1),rgba(0,0,0,.1));
}
.rollLast{
    position: absolute;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(to right,rgba(0,0,0,.1),rgba(0,0,0,1));
}
.icon-icon-test{
    position: relative;
}
.icon-aixin{
    font-size: 38rpx;
}


/* 进度条 */
.sliderCon{
    position: absolute;
    width: 100vw;
    left: 0;right: 0;bottom: 0;
}
.sliderData{
    position: relative;
}
.loadCon{
    position: absolute;
    display: flex;
    justify-content: center;
    width: 100%;
    top: 50%;
    height: 1px;
}
.loadConItem{
    height: 1px;
    width: 0;
    opacity: .9;
    background-color: #fff;
    animation:load .4s linear infinite;
}
.videoTime{
    color: #333333;
    font-size: 38rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 100rpx;
}
.videoTime .active{
    font-size: 30rpx;
    padding: 0 10rpx;
}
.itemTime{
    color: #f9f9f9;
}
.slider{
    margin:10px 0
}
.releaseTime{
    color: #999999;
    font-size: 26rpx;
    margin-top: 15rpx;
}
.rollName{
    animation:linear infinite;
}
.rollNameText{
    margin-right: 60rpx;
}

@keyframes roll {
    0% {
      transform: translateX(0px);
    }
    100% {
      transform: translateX(-50%);
    }
}
@keyframes rolls {
    0% {
      transform: translateX(0px);
    }
    100% {
      transform: translateX(-50%);
    }
}
@keyframes load {
    0% {
        width: 0%;
        opacity: .9;
        background-color: #fff;
    }
    100% {
        width: 100%;
        opacity: .5;
        background-color: rgb(202, 202, 202);
    }
}

/* 底部 */
.bottomItemCom{
    width: 100%;
}




