/* pages/user-Message/user-message.wxss */
::-webkit-scrollbar{
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}
.bg-con{
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1; 
    display: flex;
    flex-direction: column;
}
.bg-image{
    width: 100vw;
    height: 100vw;
}
.bg-cover{
    flex: 1;
    width: 100vw;
    position: relative;
}
.bg-cover-top{
    position: absolute;
    top: 0;
    background-color: rgba(0, 0, 0, .4);
    backdrop-filter: blur(20px);
    width: 100%;
    height: 100%;
}
.bg-cover-image{
    width: 100%;
    height: 100%;
}

.navCon{
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
}
.bodyCom{
    width: 100vw;
    /* overflow: hidden; */
}
.icon-fanhui{
    font-size: 48rpx;
    color: #fff;
    opacity: .9;
}
.icon-cuowuguanbiquxiao{
    font-size: 60rpx;
}

.MessageCom{
    background-color: #fff;
    width: 100vw;
    height: 100vh;
}
.userHeight{
    box-sizing: border-box;
}
.scrollCom{
    animation: scrollAn .3s linear forwards;
}
.scrollAom{
    animation: scrollAe .3s linear forwards;
}
.minImage{
    display: flex;
    position: absolute;
    top: 25rpx;
    left: 25rpx;
}
.leftTime{
    display: flex;
    align-items: center;
    height: 200rpx;
}
.textCom{
    display: flex;
    position: relative;
    height: 100rpx;
    transform: rotate(45deg);
    transform-origin:center;
}
.imgCom{
    margin-top: 30rpx;
    margin-left: 6rpx;
}
.textitem{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100rpx;
    height: 100rpx;
    font-size: 60rpx;
    font-weight: 700;
    color: #f8f4f3;
}
.lastItem{
    border-left: 1rpx rgba(255, 255, 255, 0.6) solid;
    font-size: 40rpx;
    font-weight: normal;
    opacity: .7;
}
.numText{
    transform: rotate(-45deg);
}
.min-bg-image{
    width: 220rpx;
    height: 220rpx;
}

.userInfo{
    position: relative;
    background-color: #f4f4f4;
}
.addCom{
    outline: solid 2px; 
    position: relative;
    display: flex;
    justify-content: center;
    background-color: #f4f4f4;
}
.addCom::before{
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: -2010rpx;
    padding: 2000rpx;
    box-shadow: 0 0 0 50px #f6f6f6;
    margin: -2000rpx;
    border-radius: 50%;
}
.imageCom{
    position: relative;
    width: 91.11vw;
    border-radius: 30rpx;

    display: flex;
    flex-direction: column;
    align-items: center;
}
.imageBom{
    width: 91.11vw;
    height: 51.01vw;
    border-radius: 30rpx;
    background-color:#fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -60rpx;
    z-index: 1;
}
.shatImage{
    position: absolute;
    right: 0;
    top: 20rpx;
    border: 1rpx solid #fff;
    padding: 7rpx 23rpx;
    color: #fff;
    border-radius: 40rpx;
    font-size: 25rpx;
}


@keyframes scrollAn {
    0% {
        transform: translateY(0px);
    }
    100% {
        transform: translateY(100%);
    }
}
@keyframes scrollAe {
    0% {
        transform: translateY(100%);
    }
    100% {
        transform: translateY(0);
    }
}



