<!--pages/detail-song/detail-song.wxml-->
<!-- 2.自定义导航栏 -->
<view style="height:{{homeTop}}px;">
    
</view>
<view class="navCon">
    <nav-bar bgColor="{{bgColor}}" bind:leftclick="onNavBackTap">
        <view class="tabs" slot="left">
            <text class="iconfont icon-fanhui"></text>
        </view>
        <view class="tabs" slot="center">
            
        </view>
    </nav-bar>
</view>

<!-- 具体内容 -->
<scroll-view 
    style="height: {{bodyHeight}}rpx;" 
    scroll-y 
    enable-passive 
    enhanced
    refresher-enabled 
    refresher-triggered="{{triggered}}" 
    bindrefresherrefresh="bindrefresherrefresh"
    refresher-default-style="none"
    refresher-background="{{bgColor[3]}}"
    scroll-top="{{scrollTop}}"
    scroll-with-animation
    binddragend="binddragend"
    class="scrollViewCon"
>
    <view class="header" id="header">
        <view wx:if="{{type === 'menu' && songInfos.name}}">
            <menu-header bind:bgColor="onBgColor" itemData="{{songInfos}}"/>
        </view>
        <view class="title" wx:else>{{songInfos.name}}</view>
    </view>
    <view class="song-list" id="listSong">
        <block wx:for="{{songInfos.tracks}}" wx:key="id">
            <view class="songListCon">
                <view class="indexList">
                    {{index+1}}
                </view>
                <view class="indexListLast">
                    <single-Item  
                        singleValue="{{item}}"
                        underline="{{false}}"
                        data-index="{{index}}"
                        bindtap="onSongItemTap"
                    />
                </view>
            </view>
        </block>
    </view> 
</scroll-view>

