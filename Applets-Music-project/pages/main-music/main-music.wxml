<!--pages/main-music/main-music.wxml-->
<!-- 1.搜索框 -->
<van-search
  value="{{searchValue}}"
  shape="round"
  background="#fafafa"
  placeholder="请输入搜索关键词"
  bind:click-input="onSearchClick"
/>
<!-- 2.轮播图展示 -->
<swiper
 class="banner"
 circular
 indicator-dots
 style="height: {{bannerHeight}}px;"
 wx:if="{{banners.length}}"
 >
    <block wx:for="{{banners}}" wx:key="targetId">
        <swiper-item class="item">
            <image
             class=banner-image" 
             src="{{item.imageUrl}}" 
             mode="widthFix"
             bindload="onBannerImageLoad"
             >
            </image>
        </swiper-item>
    </block>
</swiper>

<!-- 3.推荐歌曲的展示 -->
<view class="recommend" wx:if="{{recommendSongs.length}}">
    <area-header title="推荐歌曲" bind:moreclick="onRecommendMoreClick"></area-header>
    <view class="list">
        <block wx:for="{{recommendSongs}}" wx:key="id">
            <song-item-v1 itemData="{{item}}" data-index="{{index}}" bindtap="onSongItemTap"></song-item-v1>
        </block>
    </view>
</view>

<!-- 4.热门歌单 -->
<menu-area title="热门歌单" menuList="{{hotMenuList}}"/>

<!-- 5.推荐歌单 -->
<menu-area title="推荐歌单" menuList="{{recMenuList}}"/>

<!-- 6.巅峰榜 -->
<view class="ranking" wx:if="{{isRankingDate}}">
    <area-header hasMore="{{false}}" title="巅峰榜"></area-header>
    <view class="ranking-list">
        <block wx:for="{{rankingInfos}}" wx:key="id">
            <ranking-item itemData="{{item}}" key="{{index}}"/>
        </block>
    </view>
</view>


<!-- 7.播放工具栏 -->
<view class="play-bar-placeholder" wx:if="{{currentSong.name || isPlaying}}"></view>
<view 
    class="play-bar" 
    wx:if="{{currentSong.name || isPlaying}}"
    bindtap="onPlayBarAlbumTap"
>
    <view class="left">
        <image 
            class="album album-anim"
            src="{{currentSong.al.picUrl}}"
            style="animation-play-state: {{ isPlaying ? 'running':'paused' }}"
        ></image>
        <view class="name">{{currentSong.name}}</view>
    </view>
    <view class="right">
        <text 
            class="iconfont {{isPlaying ? 'icon-24gf-pause2' : 'icon-24gf-play'}}"
            catchtap="onPlayOrPauseBtnTap"
        ></text>
        <text class="iconfont icon-24gf-playlistMusic4"></text>
    </view>
</view>
