<!-- 4.热门歌单 -->
<view class="hot-menu">
    <area-header title="热门歌单"></area-header>
    <scroll-view 
        class="list" 
        scroll-x 
        enable-flex
        style="width: {{screenWidth}}px;"
    >
        <block wx:for="{{hotMenuList}}" wx:key="id">
        <view class="item">
            <menu-item itemData="{{item}}"/>
        </view>
        </block>
    </scroll-view>
</view>

<!-- 巅峰榜 -->
<view class="ranking">
    <area-header hasMore="{{false}}" title="巅峰榜"></area-header>
</view>
