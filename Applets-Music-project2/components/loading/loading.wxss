/* components/loading/loading.wxss */
.loadingCon{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #333438;
}
.loading{
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-right: 15rpx;
}
.loading .item {
    width: 13%;
    background-color: #fd3b35;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
}
.loading .item1 {
    height: 100%;
}
.loading .item2 {
    height: 60%;
}
.loading .item3 {
    height: 90%;
}
.loading .item4 {
    height: 80%;
}
@keyframes itemHeight1 {
    0% {
        height: 100%;
    }
    50% {
        height: 30%;
    }
    100% {
        height: 100%;
    }
}
@keyframes itemHeight2 {
    0% {
        height: 30%;
    }
    50% {
        height: 60%;
    }
    100% {
        height: 30%;
    }
}
@keyframes itemHeight3 {
    0% {
        height: 90%;
    }
    50% {
        height: 30%;
    }
    100% {
        height: 90%;
    }
}
@keyframes itemHeight4 {
    0% {
        height: 30%;
    }
    50% {
        height: 80%;
    }
    100% {
        height: 30%;
    }
}
.item1 {
    animation: itemHeight1 .8s linear infinite;
} 
 .item2 {
    animation: itemHeight2 .8s linear infinite;
}
.item3 {
    animation: itemHeight3 .8s linear infinite;
}
.item4 {
    animation: itemHeight4 .8s linear infinite reverse;
}